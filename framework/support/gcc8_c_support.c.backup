void memclr(void* dest, unsigned long len) { /* dest: 16bit-aligned, len: multiple of 2 */
	register void* a0 ASM("a0") = dest;
	register unsigned long d0 ASM("d0") = len;
	
	__asm {
		add.l d0, a0
		moveq #0, d0
		moveq #0, d1
		moveq #0, d2
		moveq #0, d3
		move.l d0, d4
		cmp.l #256, d4
		blt.s memclr_2
memclr_1:
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		sub.l #256, d4
		cmp.l #256, d4
		bge.s memclr_1
memclr_2:
		cmp.w #64, d4
		blt.s memclr_3
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		movem.l d0-d3, -(a0)
		sub.w #64, d4
		bra.s memclr_2
memclr_3:
		lsr.w #2, d4
		bcc.s memclr_4
		move.w d0, -(a0)
memclr_4:
		moveq #16, d1
		sub.w d4, d1
		add.w d1, d1
		jmp 2(pc,d1.w)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
		move.l d0, -(a0)
	}
}

void* memset(void *dest, int val, unsigned long len) {
	unsigned char *ptr = (unsigned char *)dest;
	while(len-- > 0)
		*ptr++ = val;
	return dest;
}

void* memcpy(void *dest, const void *src, unsigned long len) {
	char *d = (char *)dest;
	const char *s = (const char *)src;
	while(len--)
		*d++ = *s++;
	return dest;
}

void* memmove(void *dest, const void *src, unsigned long len) {
	char *d = dest;
	const char *s = src;
	if (d < s) {
		while (len--)
			*d++ = *s++;
	} else {
		const char *lasts = s + (len - 1);
		char *lastd = d + (len - 1);
		while (len--)
			*lastd-- = *lasts--;
	}
	return dest;
}

